<div class="row">
  <div class="col s6">
    <h3>Add Listing</h3>
    <%= form_tag('/listings', method: 'post') do %>
      <%= text_field_tag :name %>
      <%= submit_tag 'New Listing' %>
    <% end %>
  </div>

  <div class="col s6">
    <h3>Add User</h3>
    <%= form_tag('/users', method: 'post') do %>
      <%= text_field_tag :name %>
      <%= submit_tag 'New User' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col s4">
    <h3>Listings</h3>
    <% if @assets.any? %>
      <ul>
        <% @assets.each do |asset| %>
          <li><%= asset.name %>: <%= asset.equity %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="col s4">
    <h3>Actions</h3>
  </div>
  <div class="col s4">
    <h3>Users</h3>
    <% if @users.any? %>
      <% @users.each do |user| %>
        <li><%= user.name %>: <%= user.balance %></li>
      <% end %>
    <% end %>
  </div>

</div>
